<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <!--
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    -->
    <!-- where we map all our servlets -->
    <servlet>
        <servlet-name>Overview</servlet-name>
        <servlet-class>ami.web.core.servlets.Overview</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Retrieve</servlet-name>
        <servlet-class>ami.web.core.servlets.Retrieve</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Insert</servlet-name>
        <servlet-class>ami.web.core.servlets.Insert</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Temperature</servlet-name>
        <servlet-class>ami.web.core.servlets.Temperature</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Atmosphere</servlet-name>
        <servlet-class>ami.web.core.servlets.Atmosphere</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NetworkedDevices</servlet-name>
        <servlet-class>ami.web.core.servlets.NetworkedDevices</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Overview</servlet-name>
        <url-pattern>/overview</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Retrieve</servlet-name>
        <url-pattern>/retrieve</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Insert</servlet-name>
        <url-pattern>/insert</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Temperature</servlet-name>
        <url-pattern>/temperature</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Atmosphere</servlet-name>
        <url-pattern>/atmosphere</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NetworkedDevices</servlet-name>
        <url-pattern>/networked-devices</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <!-- index.jsp - worked at 13:57pm -->
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
